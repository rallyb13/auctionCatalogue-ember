<form>
  <div class="form-group">
    <label for="itemName">The name of this item:</label>
    {{input type="text" id="itemName" value=itemName class="form-control"}}
  </div>

  <div class="form-group">
    <label for="itemDesc">The description of this item:</label>
    {{input type="text" id="itemDesc" value=itemDesc class="form-control"}}
  </div>

  <div class="form-group">
    <label for="itemPrice">The price of this item:</label>
    {{input type="text" id="itemPrice" value=itemPrice class="form-control"}}
  </div>

  <div class="form-group">
    <label for="itemImage">The quintessential image to represent this item:</label>
    {{input type="text" id="itemImage" value=itemImage class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action "save"}}>Add Item</button>
</form><br /><hr /><br />
